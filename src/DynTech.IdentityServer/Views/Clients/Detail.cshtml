@using DynTech.IdentityServer.Models.ClientViewModels
@using IdentityServer4.Models
@model ClientViewModel
@{
    var title = "";
    if (!string.IsNullOrEmpty(Model.ClientId))
    {
        title = Model.ClientName;
    }
    else
    {
        title = "New";
    }

    ViewData["Title"] = string.Format("Client Detail - {0}", title);
}
@await Html.PartialAsync("_BreadcrumbPartial")
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="grants">
            <div class="row page-header">
                <div class="col-md-10">
                    <h1>
                        @ViewData["Title"]
                    </h1>
                    <div></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="ClientId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.ClientId))
                            {
                                <span asp-for="ClientId" class="text-default">@Model.ClientId</span>
                                <input asp-for="ClientId" class="form-control" type="hidden" />
                            }
                            else
                            {
                                <input asp-for="ClientId" class="form-control" />
                                <span asp-validation-for="ClientId" class="text-danger"></span>
                            }
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ClientName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="ClientName" class="form-control" />
                            <span asp-validation-for="ClientName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="ClientSecret" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.ClientId))
                            {
                                <span asp-for="ClientSecret" class="text-default">@Model.ClientSecret</span>
                                <input asp-for="ClientSecret" class="form-control" type="hidden" />
                            }
                            else
                            {
                                <input asp-for="ClientSecret" class="form-control" />
                                <span asp-validation-for="ClientSecret" class="text-danger"></span>
                            }
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AllowedGrantType" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="AllowedGrantType" asp-items="@Model.DefaultGrantTypes" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="RedirectUris" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="RedirectUrisString" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PostLogoutRedirectUris" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="PostLogoutRedirectUrisString" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="AllowedCorsOrigins" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="AllowedCorsOriginsString" class="form-control"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>